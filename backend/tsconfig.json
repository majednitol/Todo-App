{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./backend/src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "backend/src/**/*",
      "backend/graphql/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  